  {sanskrit:"Shatavari", latin:"Asparagus racemosus", benefits:"Nourishing tonic, especially for women's health.", products:["Utro Hayaat"]},
  {sanskrit:"Triphala", latin:"Haritaki, Bibhitaki, Amalaki", benefits:"Gentle cleansing & digestive balance.", products:["Shah Zyme","PanaSip"]},
  {sanskrit:"Turmeric", latin:"Curcuma longa", benefits:"Anti-inflammatory & antioxidant; general wellbeing.", products:["Blood Storm","Ortho Hayaat"]},
  {sanskrit:"Arjuna", latin:"Terminalia arjuna", benefits:"Traditionally used for heart and circulatory support.", products:["Blood Storm"]},
  {sanskrit:"Guggul", latin:"Commiphora mukul", benefits:"Joint & metabolic support; used in classical formulations.", products:["Ortho Hayaat"]}
];

(function renderIngredients(){
  const acc = document.getElementById('ingredientsAccordion');
  acc.innerHTML = '';
  INGREDIENTS.forEach((ing)=>{
    const item = document.createElement('div'); item.className='accordion-item';
    const header = document.createElement('div'); header.className='accordion-header';
    header.innerHTML = `<div><div style="font-weight:800">${ing.sanskrit}</div><div style="font-size:13px;color:#666">${ing.latin}</div></div><div style="color:#999">+</div>`;
    const body = document.createElement('div'); body.className='accordion-body';
    body.innerHTML = `<p style="margin:0">${ing.benefits}</p><div style="margin-top:10px"><strong>Found in:</strong> ${ing.products.map(p=>`<span class="pill">${p}</span>`).join('')}</div>`;
    header.addEventListener('click',()=> {
      const current = acc.querySelector('.accordion-item.active');
      if(current && current!==item) current.classList.remove('active');
      item.classList.toggle('active');
    });
    item.appendChild(header); item.appendChild(body); acc.appendChild(item);
  });
})();


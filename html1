(function renderProducts(){
  const grid = document.getElementById('productGrid');
  grid.innerHTML = '';
  products.forEach(p=>{
    const card = document.createElement('div');
    card.className = 'card';
    card.innerHTML = `<img src="${p.img}" alt="${p.name}" loading="lazy" decoding="async" onerror="this.src='logo.jpg'">
      <h3 style="margin-top:6px">${p.name}</h3>
      <div style="color:var(--green);font-weight:700;margin:6px 0">‚Çπ${p.price}</div>
      <p style="color:var(--muted);font-size:14px;margin-bottom:10px">${p.desc}</p>

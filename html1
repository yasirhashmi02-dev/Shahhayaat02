  pitta:["Livo Hayaat","Shah Zyme","Dia-Ease"],
  kapha:["Ortho Hayaat","Fevodol","Shah Zyme"]
};

(function renderQuiz(){
  const wrap = document.getElementById('quizWrap'); wrap.innerHTML = '';
  QUIZ.forEach((row,i)=>{
    const card = document.createElement('div'); card.className='q-card';
    card.innerHTML = `<div class="q-title">${i+1}. ${row.q}</div>`;
    const opts = document.createElement('div'); opts.className='q-options';
    row.o.forEach(([val,label])=>{
      opts.innerHTML += `<label><input type="radio" name="q${i}" value="${val}"> ${label}</label>`;
    });
    card.appendChild(opts); wrap.appendChild(card);
  });
})();

const chat = document.getElementById('quizChat');
const submitBtn = document.getElementById('submitQuiz');
const restartBtn = document.getElementById('restartQuiz');

function whatsappBtn(name){
  const p = products.find(x=>x.name === name);
  const price = p ? ` (‚Çπ${p.price})` : '';
  const link = `https://wa.me/917051056287?text=${encodeURIComponent('I want to order '+name+price)}`;
  return `<a class="btn btn-primary" target="_blank" href="${link}">Order ${name}</a>`;
}

function showRecommendations(dosha){
  const picks = RECO[dosha] || [];
  const cards = picks.map(name=>{
    const p = products.find(x => x.name === name) || {};
    const img = p.img ? `<img src="${p.img}" alt="${name}" style="width:100%;height:120px;object-fit:cover;border-radius:8px;margin-bottom:8px" loading="lazy" decoding="async" onerror="this.src='logo.jpg'">` : '';
    const price = p.price ? `‚Çπ${p.price}` : '';
    return `<div class="reco">${img}<h4 style="margin:0 0 6px 0">${name}</h4><div style="color:var(--green);font-weight:700">${price}</div>${whatsappBtn(name)}</div>`;
  }).join('');
  return `<div class="msg bot"><strong>Your dominant Dosha: ${dosha.toUpperCase()}</strong><div class="recos">${cards}</div></div>`;
}

submitBtn.addEventListener('click',()=>{
  const counts = {vata:0,pitta:0,kapha:0};
  let all = true;
  for(let i=0;i<QUIZ.length;i++){
    const sel = document.querySelector(`input[name="q${i}"]:checked`);
    if(!sel){ all=false; break; }
    counts[sel.value] += 1;
  }
  if(!all){
    chat.innerHTML = `<div class="msg bot">Please answer all questions to get a recommendation.</div>`;
    return;
  }

  let dominant = Object.keys(counts).reduce((a,b)=>counts[a]>=counts[b]?a:b);
  chat.innerHTML = `<div class="msg bot">Analyzing your responses‚Ä¶ balancing elements‚Ä¶</div>`;
  setTimeout(()=> {
    chat.innerHTML = showRecommendations(dominant) + `<div class="msg">Note: This is guidance only, not a medical diagnosis. Consult a professional for medical advice.</div>`;
    restartBtn.style.display = 'inline-block';
    chat.scrollIntoView({behavior:'smooth', block:'start'});
  }, 700);
});

restartBtn.addEventListener('click',()=>{
  document.querySelectorAll('input[type="radio"]').forEach(i=>i.checked=false);
  chat.innerHTML = '';
  restartBtn.style.display = 'none';
});

/* ---------- Contact form sends to WhatsApp ---------- */
document.getElementById('contactForm').addEventListener('submit',function(e){
  e.preventDefault();
  const name = this.name.value.trim();
  const phone = this.phone.value.trim();
  const msg = this.message.value.trim();
  const text = `Hello, I am ${name} (${phone}). ${msg}`;
  window.open(`https://wa.me/917051056287?text=${encodeURIComponent(text)}`, '_blank');
});
</script>
</body>
</html>
